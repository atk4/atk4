.atk-layout
  .atk-layout-row
    {Header}
    .atk-layout-cell(class="{$class}")
        .atk-padding-small.atk-swatch-ink
            {Header_Content}
            .atk-bar.atk-cells.atk-cells-gutter-large
                .atk-cell.atk-text-nowrap
                  a(href='{page}/{/}')
                    img(src='{public}images/logo.svg{/}' width="50px")
                .atk-cell.atk-jackscrew
                    {Top_Menu}
                    | Top Menu
                    {/}
                .atk-cell.atk-text-nowrap
                    {$Top_Actions}
                .atk-cell.atk-text-nowrap
                    .atk-cells.atk-cells-gutter-small
                        .atk-cell.atk-text-reset
                            img(src="{user_icon}http://www.gravatar.com/avatar/none{/}" width="32").atk-shape-rounded
                        .atk-cell
                            {User_Menu}{UserMenu}
                            | User Menu
                            {/}{/}
            {/}
    {/Header}
  .atk-layout-row.atk-layout-fluid
    .atk-layout.atk-layout-cell
      {$LeftSidebar}
      .atk-layout-column(class="{left-column-class}atk-swatch-ink{/}" style="{$left-column-style}")
        {$Main_Menu}
      .atk-layout-column.fluid.atk-padding.atk-jackscrew
        h2.atk-push-small {page_title}Page Title{/}
        {$Content}
      {$RightSideBar}

  .atk-layout-row
    {Footer}
    .atk-layout-cell(class="{$class}")
        .atk-padding-small.atk-swatch-ink.atk-align-center.atk-size-milli
            {Footer_Content}
            | This system is implemented using&nbsp;
            a(href="http://agiletoolkit.org/") Agile Toolkit
            | . {License}
            a(href="http://agiletoolkit.org/about/license") See License
            {/}{/}
    {/}
